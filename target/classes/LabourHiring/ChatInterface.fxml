<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- ChatInterface.fxml -->
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LabourHiring.ChatController">
    <TextArea fx:id="chatTextArea" VBox.vgrow="ALWAYS" />
    <TextField fx:id="messageTextField" promptText="Type your message..." />
    <Button text="Send" onAction="#sendMessage" />
</VBox>

