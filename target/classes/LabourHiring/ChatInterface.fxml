<!-- ChatInterface.fxml -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <TextArea fx:id="chatTextArea" VBox.vgrow="ALWAYS" />
    <TextField fx:id="messageTextField" promptText="Type your message..." />
    <Button text="Send" onAction="#sendMessage" />
</VBox>
